<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fedo.bouniolsalibi.com.businesscard.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                style="@style/RestaurantPicture"
                android:scaleType="centerCrop"
                android:src="@drawable/restaurant"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            style="@style/title"
            android:fontFamily="serif-monospace"
            android:text="@string/companyName"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/threepic"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_below="@+id/linear"
            android:orientation="horizontal"
            tools:ignore="ObsoleteLayoutParam">

            <ImageView
                android:id="@+id/imageView2"
                style="@style/Fishpic1"
                android:scaleType="centerCrop"
                android:src="@drawable/fishpic1"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/imageView3"
                style="@style/Fishpic2"
                android:scaleType="centerCrop"
                android:src="@drawable/fishpic2"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/imageView4"
                style="@style/Fishpic3"
                android:scaleType="centerCrop"
                android:src="@drawable/fishpic3"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <TextView
            android:id="@+id/description"
            style="@style/description"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/threepic"
            android:drawableLeft="@drawable/ic_info_black_24dp"
            android:text="@string/description"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            style="@style/detailsAndContact"
            android:layout_below="@+id/description"
            android:orientation="vertical">

            <TextView
                android:id="@+id/OpeningHours"
                style="@style/detailsAndContact"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:text="@string/OpeningHours"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/address"
                style="@style/detailsAndContact"
                android:drawableLeft="@drawable/ic_add_location_black_24dp"
                android:text="@string/address"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/telephone"
                style="@style/detailsAndContact"
                android:drawableLeft="@drawable/ic_phone_in_talk_black_24dp"
                android:text="@string/telephone"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
